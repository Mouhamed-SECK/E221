{% extends 'base.html.twig' %}

{% block title %}
	Tous les biens
{% endblock %}

{% block body %}
	<!-- Breadcrumb Section Begin -->
	<section class="breadcrumb-section spad set-bg" data-setbg="img/breadcrumb-bg.jpg">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcrumb-text">
						<h4>Notre catalogue de bien</h4>
						<div class="bt-option">
							<a href="./index.html">
								<i class="fa fa-home"></i>
								Acceuil</a>
							<span>catalogue</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- Breadcrumb Section End -->


	<section class="property-section spad">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="section-title">
						<h4>Tous les biens</h4>
					</div>
				</div>
			</div>
			<div class="row">
				{% for property in properties %}
					<div class="col-lg-4 col-md-6">
						<div class="property-item">
							<div class="pi-pic set-bg" data-setbg="img/property/property-1.jpg"></div>
							<div class="pi-text">

								<div class="pt-price">
									{{property.formattedPrice}}
									FCFA
									<span>/ Mois</span>
								</div>
								<h5>
									<a href="{{path('property.show', {id: property.id, slug: property.slug})}}">
										{{property.title}}</a>
								</h5>
								<p>
									<span class="icon_pin_alt"></span>
									{{property.city}}
									{{property.address}}</p>
								<ul>
									<li>
										<i class="fa fa-object-group"></i>
										{{property.surface}}</li>

									<li>
										<i class="fa fa-bed"></i>
										{{property.badrooms}}</li>


								</ul>

							</div>
						</div>
					</div>
				{% endfor %}


				<div class="col-lg-12">
					<div class="loadmore-btn">
						<a href="#">Load more</a>
					</div>
				</div>
			</div>
		</div>
	</section>

{% endblock %}
